<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       ">

       <!--<import resource="classpath:cache/cache-config-account.xml"/>-->

       <context:annotation-config/>
       <context:component-scan base-package="com.mingguo.wu.account.*"/>

       <!-- DB配置 -->
       <bean id="dsAccount" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">
              <property name="url" value="${account.w.jdbc.jdbcUrl}" />
              <property name="username" value="${account.w.jdbc.username}" />
              <property name="password" value="${account.w.jdbc.password}" />
              <property name="filters" value="stat" />
              <property name="maxActive" value="${account.w.jdbc.maxConnections}" />
              <property name="initialSize" value="${account.w.jdbc.minConnections}" />
              <property name="maxWait" value="60000" />
              <property name="minIdle" value="1" />
              <property name="timeBetweenEvictionRunsMillis" value="3000" />
              <property name="minEvictableIdleTimeMillis" value="300000" />
              <property name="validationQuery" value="SELECT 'x'" />
              <property name="testWhileIdle" value="true" />
              <property name="testOnBorrow" value="false" />
              <property name="testOnReturn" value="false" />
       </bean>
       <bean id="dsAccount_r" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">
              <property name="url" value="${account.r.jdbc.jdbcUrl}" />
              <property name="username" value="${account.r.jdbc.username}" />
              <property name="password" value="${account.r.jdbc.password}" />
              <property name="filters" value="stat" />
              <property name="maxActive" value="${account.r.jdbc.maxConnections}" />
              <property name="initialSize" value="${account.r.jdbc.minConnections}" />
              <property name="maxWait" value="60000" />
              <property name="minIdle" value="1" />
              <property name="timeBetweenEvictionRunsMillis" value="3000" />
              <property name="minEvictableIdleTimeMillis" value="300000" />
              <property name="validationQuery" value="SELECT 'x'" />
              <property name="testWhileIdle" value="true" />
              <property name="testOnBorrow" value="false" />
              <property name="testOnReturn" value="false" />
       </bean>

       <!-- 配置SqlSessionFactoryBean -->
       <bean id="sqlSessionFactoryAccount" class="org.mybatis.spring.SqlSessionFactoryBean">
              <property name="dataSource" ref="dsAccount" />
              <property name="configLocation" value="classpath:mybatis/mybatis-config-account.xml" />
              <property name="mapperLocations" value="classpath:mybatis/mapper/com/mingguo/wu/account/*.xml"/>
       </bean>

       <bean id="sqlSessionTemplateAccount" class="org.mybatis.spring.SqlSessionTemplate" scope="prototype" autowire="byName">
              <constructor-arg index="0" ref="sqlSessionFactoryAccount" />
              <constructor-arg index="1" value="REUSE"/>
       </bean>

       <bean id="sqlSessionFactoryAccount_r" class="org.mybatis.spring.SqlSessionFactoryBean">
              <property name="dataSource" ref="dsAccount_r" />
              <property name="configLocation" value="classpath:mybatis/mybatis-config-account.xml" />
              <property name="mapperLocations" value="classpath:mybatis/mapper/com/mingguo/wu/account/*.xml"/>
       </bean>

       <bean id="sqlSessionTemplateAccount_r" class="org.mybatis.spring.SqlSessionTemplate" scope="prototype" autowire="byName">
              <constructor-arg index="0" ref="sqlSessionFactoryAccount_r" />
              <constructor-arg index="1" value="REUSE"/>
       </bean>


</beans>