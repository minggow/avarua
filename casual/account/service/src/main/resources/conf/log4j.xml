<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c %M:%L - %m%n" />
        </layout>
    </appender>

    <appender name="stdout" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="append" value="true"/>
        <!--<param name="file" value="${log4j.out.dir}/tomcat_stdout.log"/>-->
        <param name="file" value="D:\loggs\account\tomcat_stdout.log" />
        <param name="datePattern" value="'.'yyyy-MM-dd" />
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %t %c %M:%L - %m%n" />
        </layout>
    </appender>

    <logger name="org.mybatis" additivity="false">
        <level value="WARN" />
        <appender-ref ref="stdout" />
        <appender-ref ref="console" />
    </logger>

    <logger name="com.alibaba" additivity="false">
        <level value="WARN" />
        <appender-ref ref="stdout" />
    </logger>

    <logger name="com.mingguo.wu" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="stdout" />
        <appender-ref ref="console" />
    </logger>


    <root>
        <level value="DEBUG" />
        <appender-ref ref="stdout" />
        <appender-ref ref="console" />
    </root>
</log4j:configuration>